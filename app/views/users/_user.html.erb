<tr>
  <td class="check"><%= check_box_tag :user, user.id, false, :id => nil %></td>
  <td class="nick"><%= link_to image_tag(user.avatar.url(:small), :class => "avatar"), user_path(user.id)  %><%= user.last_name + " " + user.first_name %></td>
  <td>
    <%= user.last_sign_in_at %>
    <% if can? :manage, :users %>
    <div class="actions">
      <%=  link_to "", edit_user_path(user.id), :class => "action_edit" %>
      <%=  link_to "", user_path(user.id), :class => "action_delete", :method => :delete, :confirm => "Вы уверены, что хотите удалить этого пользователя?" %>
    </div>
    <% end %>
  </td>
</tr>