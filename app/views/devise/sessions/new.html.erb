<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "user_form"}) do |f| %>
  <%= content_tag(:div, content_tag(:h2, flash[:alert]), :id => "error_explanation") if flash[:alert] %>

  <div class="field"><%= f.label :email, "Email" %>
  <%= f.email_field :email %></div>

  <div class="field"><%= f.label :password, "Пароль" %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="field remember_me"><%= f.check_box :remember_me %> <%= f.label :remember_me, "Запомнить меня." %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
          <%= link_to "Я забыл свой пароль", new_password_path(resource_name) %>
      <% end -%>
    </div>
  <% end -%>

  <div class="field"><%= f.submit "Войти", :class => 'button' %></div>
<% end %>