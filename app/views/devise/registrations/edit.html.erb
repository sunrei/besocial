<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "user_form", :multipart => true, :method => :put }) do |f| %>
  <div id="sidebar">
    <%= image_tag @user.avatar.url(:normal), :class => "avatar" %>
    <label class="label_avatar">
    <%= f.file_field :avatar %>
    </label>
  </div>
  <div id="content" class="content">
    <h1>Редактировать профиль</h1>
    <div class="inner">
      <%= devise_error_messages! %>

      <div class="field"><%= f.label :nick, "Ник" %><br />
      <%= f.text_field :nick %></div>

      <div class="field"><%= f.label :status, "Статус" %><br />
      <%= f.text_field :status %></div>

      <div class="field"><%= f.label :first_name, "Имя" %><br />
      <%= f.text_field :first_name %></div>

      <div class="field"><%= f.label :last_name, "Фамилия" %><br />
      <%= f.text_field :last_name %></div>

      <div class="field"><label>ПОЛ</label><br />
        <%= f.radio_button :gender, 0 %>
        <%= f.label :gender, "Мужской", :class => "gender" %>
        <%= f.radio_button :gender, 1 %>
        <%= f.label :gender, "Женский", :class => "gender" %>
      </div>

      <div class="field"><%= f.label :birthday, "День рождения" %><br />
      <%= f.date_select :birthday, :start_year => 1930, :end_year => (Time.now.year - 5) %></div>

      <div class="field"><%= f.label :about, "О себе" %><br />
      <%= f.text_area :about %></div>

      <div class="field"><%= f.label :password, "Пароль" %> <span class="hint">(оставьте пустым если не хотите менять)</span><br />
      <%= f.password_field :password, :autocomplete => "off" %></div>

      <div class="field"><%= f.label :password_confirmation, "Повторите пароль" %><br />
      <%= f.password_field :password_confirmation %></div>

      <div class="field"><%= f.label :current_password, "Текущий пароль" %><br />
      <%= f.password_field :current_password %></div>

      <div class="field"><%= f.submit "Сохранить", :class => 'button' %></div>

    </div>
  </div>
<% end %>